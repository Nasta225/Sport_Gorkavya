<Window x:Class="WpfApp1.Sport.Catalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Sport"
        mc:Ignorable="d"
        Title="Catalog" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Icon="/image/logotip.png">
    <Grid>
        <Canvas>
            <TextBlock Background="#c99159" Height="80" Width="800"/>
            <TextBlock Text="ЛИДЕР" Style="{StaticResource Text4}" Canvas.Left="10" Canvas.Top="25"/>
            <TextBox Background="Transparent" BorderBrush="SaddleBrown" BorderThickness="3" Text="Поиск" FontFamily="Times New Roman" FontSize="22" VerticalContentAlignment="Center" Height="46" Width="205" Canvas.Left="88" Canvas.Top="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Background="#c99159" Canvas.Left="550" Canvas.Top="20"  Height="40" Width="100" BorderBrush="SaddleBrown" BorderThickness="3" Click="Button_Click_1">
                <TextBlock Text="Войти" Style="{StaticResource Text}" Canvas.Left="94" Canvas.Top="21" Height="29" Width="86" TextAlignment="Center"/>
            </Button>

            <Button x:Name="TablicaTovarov" Click="TablicaTovarov_Click" Visibility="Collapsed"
                Background="#c99159" Canvas.Left="305" Canvas.Top="17" Height="40" Width="228" BorderBrush="SaddleBrown" BorderThickness="3" 
                    Style="{StaticResource But}" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock Text="Таблица товаров" Style="{StaticResource Text}" Canvas.Left="94" Canvas.Top="21" Height="29" Width="196" TextAlignment="Center"/>
            </Button>

            <Button x:Name="corzina" Canvas.Left="660" Canvas.Top="20" Height="40" Width="120" Style="{StaticResource Korzina}" Click="corzina_Click">
                <TextBlock Text="Корзина" Style="{StaticResource Text}" TextAlignment="Center" Height="34" Width="105"/>
            </Button>
            <Image Source="/Image/catalog.jpg" Width="800" Height="290" Canvas.Top="145"/>
            <Button x:Name="CatalogTovarov" Content="Ворота" Click="CatalogTovarov_Click" Style="{StaticResource But}" Canvas.Left="50" Canvas.Top="90" />
            <Button x:Name="Catalog2" Content="Всё для спортивного зала" Canvas.Left="279" Canvas.Top="92" Style="{StaticResource But}" Width="243"/>
            <Button x:Name="Catalog1" Content="Спортивная одежда" Click="Catalog1_Click" Canvas.Left="550" Canvas.Top="93" Style="{StaticResource But}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Window>
